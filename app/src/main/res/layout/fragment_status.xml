<?xml version="1.0" encoding="utf-8"?>
<layout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.StatusFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCC480"
        android:padding="5dp">

        <ImageView
            android:id="@+id/StatusImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nodp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/StatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="My Status"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@+id/StatusImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/StatusInstructon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="Click here to add status"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/StatusImage"
            app:layout_constraintTop_toBottomOf="@+id/StatusText" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="37dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:src="@android:drawable/ic_input_add"
            app:layout_constraintStart_toStartOf="@+id/StatusImage"
            app:layout_constraintTop_toTopOf="@+id/StatusImage" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>